}
<!-- Kết thúc -->
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NoiDung)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tieude)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Anhhoatdong)
        </th>
        <th>
