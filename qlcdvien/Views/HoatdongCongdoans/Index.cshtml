@model IEnumerable<qlcdvien.Models.HoatdongCongdoan>


@{
    /**/

    ViewBag.Title = "Index";
}




<!-- Đoạn cần thêm -->
@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <label for="id-date-range-picker-1">Date Range Picker</label>

        
            
                
                    @*<span class="input-group-addon">
                            <i class="fa fa-calendar bigger-110"></i>
                        </span>*@




                    <input type="text" name="date-range-picker" id="id-date-range-picker-1" value="@ViewBag.DateFilter" />

                

                Find by content:
                
                @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                <button class="btn btn-info" type="submit">
                    <i class="ace-icon fa fa-check bigger-110"></i>
                    Submit
                </button>
            
        


    </div>
}

<!-- Kết thúc -->
<table id="example" class="display" style="width:100%">
    <thead><tr><th></th></tr></thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    <h2>@Html.ActionLink(item.Tieude, "Details", new { id = item.Hoatdong_Id }) </h2>

                    @*@Html.DisplayFor(modelItem => item.NoiDung)*@
                    @Html.Raw(item.NoiDung)
                    <br />
                    <b>
                        @Html.DisplayFor(modelItem => item.ngaydang)
                        @Html.DisplayFor(modelItem => item.ApplicationUser.name)
                    </b>
                    @if (!this.User.IsInRole("user"))
                    {
                        <br />
                        <span>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Hoatdong_Id })
                        </span>
                        <span> @Html.ActionLink("Details", "Details", new { id = item.Hoatdong_Id }) </span>
                        <span> @Html.ActionLink("Delete", "Delete", new { id = item.Hoatdong_Id })</span>
                    }

                </td>




            </tr>
        }
    </tbody>
</table>

