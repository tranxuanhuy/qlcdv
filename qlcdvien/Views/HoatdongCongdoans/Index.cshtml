    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tieude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Anhhoatdong)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ngaydang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.daDuyet)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Hoatdong_Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Hoatdong_Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Hoatdong_Id })
