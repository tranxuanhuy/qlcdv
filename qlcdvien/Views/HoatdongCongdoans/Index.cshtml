    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<!-- Đoạn cần thêm -->
@using (Html.BeginForm())
{
<p>
    Title: @Html.TextBox("Firstdate") @Html.TextBox("Enddate") <input type="submit" value="Tìm kiếm" />
